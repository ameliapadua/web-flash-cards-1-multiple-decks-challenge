<div class="container">
  <h1>Welcome to Guessers</h1>
  <p>Guess an answer</p>

  <table class="formtable">
    <form action="/deck/result" method="post">
      <%= Round.card_in_play.definition %><br>
      <p>This is the answer <%= Round.card_in_play.term %></p><br>
      <input type="hidden" name="real_answer" value="<%= Round.card_in_play.term %>" />
      <% @possible_answers.shuffle.each do |possible_answer| %>
      <input type="radio" name="option" value="<%= possible_answer %>" > <%= possible_answer %>
      <br/><br/>
      <% end %>

    <tr>
      <td><input class='large-button'type='submit' value='Submit Guess'/>
      </td>
        <td><a class="large-button" href="/deck">Deck List</a></td>
    </tr>
    </form>
  </table>
</div>
