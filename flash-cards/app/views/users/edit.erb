<div class="header">
  <h2>Edit Info</h2>
</div>

<div class="container">
  <div class="margin-top"></div>

  <form action="/users/<%= @current_user.id %>" method="post">
    <label for="user[name]">Edit Name:</label><br>
    <input type="text" name="user[name]" value="<%= @current_user.name %>" />
    <br><br>
    <label for="user[email]">Edit Email:</label><br>
    <input type="text" name="user[email]" value="<%= @current_user.email %>" />
    <br><br>
    <label for="user[password]">Edit Password:</label><br>
    <input type="text" name="user[password]" value="<%= @current_user.password %>" />
    <br><br>

    <input type="submit" />
  </form><br>
  <a href="/users/<%= @current_user.id%>/stats">Cancel</a>
</div>
